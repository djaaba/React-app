{
	"extends": [
		"stylelint-config-standard",
		"stylelint-order-config-standard"
	],
	"plugins": [
		"stylelint-order"
	],
	"ignoreShorthands": [
		"/grid/", "/grid-template/", "/grid-area/"
	],
	"ignorePattern": "kebab-case",
	"rules": {
		"indentation": [
			"tab"
		],
		"color-hex-case": "upper"
	}
}